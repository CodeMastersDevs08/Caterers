@model IEnumerable<Caterer.Models.OrderDetailWebsite>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
    ViewData["Heading"] = "Products";
}
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h3>Orders</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Restaurant </th>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{

                                    int counter = 1;
                                }
                                @foreach (var orderDetail in Model)
                                {
                                    @if (orderDetail.Status != "Accept")
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>@orderDetail.OrderDetailsWebsiteId</td>
                                            <td>@orderDetail.SelectedDate</td>
                                            <td>@orderDetail.RestaurantName</td>
                                            <td>@orderDetail.Name</td>
                                            <td>
                                                <a class="btn btn-warning btn-s btn-move " asp-route-id="@orderDetail.OrderDetailsWebsiteId" asp-action="OrderAccepted" asp-controller="OrderDetailWebsites">Pending</a>
                                                <a class="btn btn-info btn-s btn-details" asp-route-id="@orderDetail.OrderDetailsWebsiteId" asp-action="RestaurantOrderDetails" asp-controller="OrderDetailWebsites">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                            </td>
                                            @{
                                                counter++;
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h3>Accepted Orders</h3>
                </div>
                <div id="right-container" class="right-container">
                    <!-- Data will be moved here -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="table" class="table">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Order ID</th>
                                        <th>Date </th>
                                        <th>Restaurant</th>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int counter1 = 1;
                                    }
                                    @foreach (var orderDetail in Model)
                                    {
                                        @if (orderDetail.Status == "Accept")
                                        {
                                            <tr>
                                                <td>@counter1</td>
                                                <td>@orderDetail.OrderDetailsWebsiteId</td>
                                                <td>@orderDetail.SelectedDate </td>
                                                <td>@orderDetail.RestaurantName</td>
                                                <td>@orderDetail.Name</td>
                                                <td>
                                                    <a class="btn btn-success btn-s btn-move " asp-route-id="@orderDetail.OrderDetailsWebsiteId" asp-action="OrderRejected" asp-controller="OrderDetailWebsites">Accepted</a>
                                                    <a class="btn btn-info btn-s btn-details" asp-route-id="@orderDetail.OrderDetailsWebsiteId" asp-action="RestaurantOrderDetails" asp-controller="OrderDetailWebsites">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </a>
                                                </td>
                                                @{
                                                    counter1++;  
                                                }
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 25
            });
        });
    </script>
    }
