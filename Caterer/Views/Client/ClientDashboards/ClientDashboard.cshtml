@using System.Security.Claims;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_ClientDashboard.cshtml";
}
<link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Your Orders</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-success btn-sm ms-auto" asp-action="WebsiteHome" asp-controller="Websites">Go To Home </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th>Serial No</th>
                                    <th>Order ID</th>
                                    <th>Restaurant</th>
                                    <th>Delivery Status</th>
                                    <th>Order Status</th>
                                    <th> Grand Total</th>
                                    <th> Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @foreach (var orderDetail in Model)

                                {
                                    <tr>
                                        <td>@counter</td>
                                        <td>@orderDetail.OrderDetailsWebsiteId</td>
                                        <td>@orderDetail.RestaurantName</td>
                                        <td>
                                            @if (orderDetail.DeliveryStatus == "Pending")
                                            {
                                                <span class="badge badge-secondary" style="background-color: red; color: white;">@orderDetail.DeliveryStatus</span>

                                            }
                                            else if (orderDetail.DeliveryStatus == "Completed")
                                            {
                                                <span class="badge badge-secondary" style="background-color: green; color: white;">@orderDetail.DeliveryStatus</span>
                                            }
                                        </td>
                                        <td>
                                            @if (orderDetail.Status == "Pending")
                                            {
                                                <span class="badge badge-secondary" style="background-color: red; color: white;">@orderDetail.Status</span>

                                            }
                                            else if (orderDetail.Status == "Accept")
                                            {
                                                <span class="badge badge-secondary" style="background-color: green; color: white;">@orderDetail.Status</span>
                                            }
                                        </td>
                                        <td>@orderDetail.GrandTotal</td>
                                        @{
                                            counter++;
                                        }
                                        <td>
                                            <a   asp-route-id="@orderDetail.OrderDetailsWebsiteId" asp-action="ClientOrderDetails" asp-controller="ClientDashboards">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 25
            });
        });
    </script>
    }