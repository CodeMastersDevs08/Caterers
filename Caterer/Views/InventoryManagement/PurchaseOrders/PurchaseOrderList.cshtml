@model List<Caterer.Models.PurchaseOrder>
@{
    ViewData["Title"] = "Index";
    ViewData["Heading"] = "Purchase Orders";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Purchase Orders</h4>
                        @{
                            var warehouses = ViewData["Warehouses"] as List<Warehouse>;
                        }
                        <div class="d-flex" style="gap:15px;">
                            <div class="ms-auto">
                                <div class="input-group">
                                    <select id="warehouseFilter" class="form-select" onchange="applyWarehouseFilter()">
                                        <option value="">Select warehouse</option>
                                        @foreach (var warehouse in warehouses)
                                        {
                                            <option value="@warehouse.WarehouseId">@warehouse.WarehouseName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="ms-auto">
                                <a class="btn btn-success btn-sm ms-auto" asp-controller="PurchaseOrders" asp-action="PurchaseOrderCreate">Add Purchase Order</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>PNo</th>
                                    <th>WarehouseName</th>
                                    <th>Purchase Order No</th>
                                    <th>Supplier </th>
                                    <th>Purchase Order Date</th>
                                    <th>Expected Date</th>
                                    <th>Payment Method</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @{
                                    var uniquePNos = new HashSet<int>();
                                }
                                @foreach (var item in Model)
                                {
                                    if (!uniquePNos.Contains(item.PNo))
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>@item.PNo</td>
                                            <td>@item.WarehouseName</td>
                                            <td>@item.PurchaseOrderNo</td>
                                            <td> @Html.DisplayFor(modelItem => item.Supplier.SupplierName)</td>
                                            <td>(@item.PurchaseOrderDate.ToString("dd-MM-yyyy"?? "N/A"))</td>
                                            <td>(@item.ExpectedDate.ToString("dd-MM-yyyy"?? "N/A"))</td>
                                            <td>@item.Paymentmethod</td>
                                            <td>@item.Total</td>
                                            <td>
                                                @if (item.Status == "Pending")
                                                {
                                                    <span class="badge badge-secondary" style="background-color: red; color: white;">@item.Status</span>

                                                }
                                                else if (item.Status == "Partially")
                                                {
                                                    <span class="badge badge-secondary" style="background-color: gold; color: black;">@item.Status</span>
                                                }
                                                else if (item.Status == "Completed")
                                                {
                                                    <span class="badge badge-secondary" style="background-color: green; color: white;">@item.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Status != "Completed" && item.Status != "Partially")
                                                {
                                                    <a asp-action="PurchaseOrderEdit" asp-route-id="@item.PurchaseOrderId" asp-route-menuItemId="@item.PNo">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span style="color: grey;"><i class="fa-solid fa-pen-to-square"></i></span>
                                                }|

                                                @if (item.Status != "Pending" && item.Status != "Partially")
                                                {
                                                    <a class="badge badge-success" asp-route-id="@item.PurchaseOrderId" asp-action="PurchaseOrderDetails" style="background-color: darkorange; color: white; text-decoration: none;">Details</a>
                                                }
                                                else
                                                {
                                                    <a class="badge badge-success" asp-route-id="@item.PurchaseOrderId" asp-action="PurchaseOrderDetails" style="background-color: darkorange; color: white; text-decoration: none;">Create GRN</a>
                                                }
                                            </td>
                                            @{
                                                counter++;
                                            }
                                        </tr>
                                        uniquePNos.Add(item.PNo);
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 25
            });
        });
    </script>
    <script>
        function applyWarehouseFilter() {
            var selectedWarehouseId = $('#warehouseFilter').val();
            window.location.href = '/PurchaseOrders/PurchaseOrderList?warehouseId=' + selectedWarehouseId;
        }
        function setSelectedWarehouse(warehouseId) {
            $('#warehouseFilter').val(warehouseId);
        }
        $(document).ready(function () {
            var urlParams = new URLSearchParams(window.location.search);
            var warehouseId = urlParams.get('warehouseId');
            setSelectedWarehouse(warehouseId);
        });
    </script>
    }