@model Caterer.Models.StockAdjustment
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
    ViewData["Heading"] = "Products";
}
<div class="container-fluid py-8">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/js/bootstrap-select.min.js"></script>
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Stock Adjustment</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-primary btn-sm ms-auto" asp-action="StockAdjustmentList" asp-controller="StockAdjustments">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="StockAdjustmentCreate" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="warehouseId">Warehouse Id</label>
                                    <select id="warehouseId" data-live-search="true" asp-items="@ViewBag.Warehouse" class="form-control selectpicker">
                                        <option value="">Select a Warehouse</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="warehouseName">Warehouse Name</label>
                                    <input asp-for="WarehouseName" id="warehouseName" name="WarehouseName" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProductId" class="control-label">Product</label>
                                    <select id="productId" asp-for="ProductId" class="form-control" disabled>
                                        <option value="">Select a Product</option>
                                    </select>
                                    <span asp-validation-for="ProductId" class="text-danger"></span>
                                </div>


                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AdjustmentType" class="control-label">Adjustment Type</label>
                                    <select asp-for="AdjustmentType" class="form-control">
                                        <option value="Increase">Increase</option>
                                        <option value="Decrease">Decrease</option>
                                    </select>
                                    <span asp-validation-for="AdjustmentType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Quantity" class="control-label">Quantity</label>
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AdjustmentReason" class="control-label">Adjustment Reason</label>
                                    <textarea asp-for="AdjustmentReason" class="form-control"> </textarea>
                                    <span asp-validation-for="AdjustmentReason" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6" style="display:none">
                                <div class="form-group">
                                    <label asp-for="StockDate" class="control-label">Stock Date</label>
                                    <input asp-for="StockDate" type="date" class="form-control" id="stockDateInput" />
                                    <span asp-validation-for="StockDate" class="text-danger"></span>
                                </div>

                                <script>
                                    document.addEventListener("DOMContentLoaded", function () {
                                        var currentDate = new Date().toISOString().split('T')[0];
                                        document.getElementById('stockDateInput').value = currentDate;
                                    });
                                </script>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="text-center custom-pro-edt-ds">
                                    <button type="submit" class="btn btn-success">Save</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            @section Scripts {

                <script>
                    $(document).ready(function () {
                        $('.selectpicker').selectpicker();
                    });
                </script>
                <script>
                    $(document).ready(function () {
                        $(document).on('change', '#warehouseId', function () {
                            var warehouseId = $(this).val();
                            if (warehouseId) {
                                $('#productId').prop('disabled', false);
                                // Fetch products based on warehouseId via AJAX
                                $.ajax({
                                    url: '/StockAdjustments/GetProductsByWarehouseId', 
                                    type: 'GET',
                                    data: { warehouseId: warehouseId },
                                    success: function (data) {
                                        $('#productId').empty();
                                        $.each(data, function (index, product) {
                                            $('#productId').append($('<option>', {
                                                value: product.productId,
                                                text: product.productName
                                            }));
                                        });
                                    }
                                });
                            } else {
                                $('#productId').prop('disabled', true).empty();
                            }
                        });
                    });
                </script>
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }
        </div>
    </div>
</div>