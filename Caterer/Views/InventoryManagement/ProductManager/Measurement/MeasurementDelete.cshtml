@model Caterer.Models.Measurement

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-md-5 col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Delete Units</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-primary btn-sm ms-auto" asp-controller="Measurement" asp-action="MeasurementList">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                        <div>
                            <h5>Measurement Information</h5>
                            <hr class="my-3">
                            <dl class="row">
                                <dt class="col-sm-3">Name:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.MeasurementName)</dd>
                            </dl>
                            <form asp-action="MeasurementDelete" class="mb-4">
                                <input type="hidden" asp-for="MeasurementId" />
                                <button type="submit" class="btn btn-danger">Delete</button>                            
                            </form>
                        </div>
                    </div>            
                    @section Scripts {
                        @{
                            await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                    }
                </div>
            </div>
        </div>
    </div>
