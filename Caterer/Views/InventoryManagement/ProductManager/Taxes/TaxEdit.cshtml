@model Caterer.Models.TaxEditViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-md-5 col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Edit Tax</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-primary btn-sm ms-auto" asp-action="TaxList" asp-controller="Taxes">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="TaxEdit" method="post">
                        <div>
                            <div>
                                <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div>
                                        <div>
                                            @for (int i = 0; i < Model.Taxes.Count; i++)
                                            {
                                                var currentTax = Model.Taxes[i];
                                                <input type="hidden" asp-for="Taxes[i].TaxId" />
                                                <input type="hidden" asp-for="Taxes[i].TaxNo" />
                                                <input type="hidden" asp-for="Taxes[i].RestaurantId" />

                                                <div class="form-group mb-2">
                                                    <!-- Adjusted to mb-2 -->
                                                    @if (i == 0)
                                                    {
                                                        <input asp-for="Taxes[i].TaxType" readonly class="form-control non-editable" placeholder="Tax Type" />
                                                    }
                                                    else
                                                    {
                                                        <input type="hidden" asp-for="Taxes[i].TaxType" />
                                                    }
                                                </div>

                                                <div class="row mb-2">
                                                    <!-- Adjusted to mb-2 -->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Tax Name</label>
                                                            <input asp-for="Taxes[i].TaxName" required="" class="form-control" placeholder="Brand Name" />
                                                            <span asp-validation-for="Taxes[i].TaxName" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label">Tax Percentage %</label>
                                                            <input asp-for="Taxes[i].TaxPercentage" onchange="updateTotal()" required="" class="form-control" placeholder="Tax Percentage " />
                                                            <span asp-validation-for="Taxes[i].TaxPercentage" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div><br /><br />
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class=" text-center custom-pro-edt-ds">
                                            <button type="submit" class="btn btn-success" onclick="validateName()">
                                                Update
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
                <script>
                    // Function to update the total tax percentage
                    function updateTotal() {
                        var taxType = $("input[name='Taxes[0].TaxType']").val();
                        if (taxType === "Multiple") {
                            var total = 0;
                            for (var i = 1; i < @Model.Taxes.Count; i++) {  
                                var taxPercentage = parseFloat($("input[name='Taxes[" + i + "].TaxPercentage']").val().replace(',', '.')) || 0;
                                total += taxPercentage;
                            }
                            $("input[name='Taxes[0].TaxPercentage']").val(total.toFixed(2));  
                        }
                    }
                    $("input[name^='Taxes']").on('input', function () {
                        updateTotal();
                    });
                    $(document).ready(function () {
                        updateTotal();
                    });
                </script>
            }
        </div>
    </div>
</div>