                        </dd>
                       
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Instock)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Instock)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SafetyStock)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SafetyStock)
                        </dd>
                    </dl>
                </div>
            </div>
            </div>
        </div>
    </div>

</body>
