@model Caterer.Models.Product
@{
    ViewData["Title"] = "Details";
}
<style>
    .col-sm-2{
        color:white;
    }

    .col-sm-10{
         color:white;
    }
</style>
<body>
    <br />
    <br />
        <br />
    <div class="product-status mg-b-30">
        <div class="container-fluid">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
