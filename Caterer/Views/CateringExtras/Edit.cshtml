@model Caterer.Models.CateringExtra
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Heading"] = "Products";
}
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <p class="mb-0 mr-auto">>Edit Extras </p>
                        <a class="btn btn-danger btn-sm " asp-action="Edit" asp-controller="CateringItems" asp-route-id="@Model.CateringItemId">X</a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CateringExtrasId" />
                        <input asp-for="CateringItemId" required type="hidden" class="form-control" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ExtraName" class="control-label"></label>
                                    <input asp-for="ExtraName" required class="form-control" />
                                    <span asp-validation-for="ExtraName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ExtraPrice" class="control-label"></label>
                                    <input asp-for="ExtraPrice" required class="form-control" />
                                    <span asp-validation-for="ExtraPrice" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="AddonCategory" class="control-label"></label>
                            <input asp-for="AddonCategory" class="form-control" />
                            <span asp-validation-for="AddonCategory" class="text-danger"></span>
                        </div>
                        <div class="text-center custom-pro-edt-ds">
                            <input type="submit" value="Update" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }   
    }
