@model IEnumerable<Caterer.Models.OrderDetailWebsite>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SuperAdminDashboard.cshtml";
}
<link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <p>Order List</p>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-danger btn-sm ms-auto " asp-action="SuperAdminDeletedOrderList" asp-controller="Restaurants">Reject/Cancel List </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>
                                        Order Code
                                    </th>
                                    <th>
                                        No Of Pax
                                    </th>
                                    <th>
                                        Customer
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Delivery Slot
                                    </th>
                                    <th>
                                        Delivery Status
                                    </th>
                                    <th>
                                        Payment Status
                                    </th>

                                    <th>
                                        Options
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.OrderDetailsWebsiteId)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.NoOfPerson)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.GrandTotal)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.SelectedDate) @Html.DisplayFor(modelItem => item.SelectedTime)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.DeliveryStatus)
                                            </td>
                                            <td class="ps-3">
                                                @{
                                                    string paymentMethod = "";

                                                    if (item.Cash != 0)
                                                    {
                                                        paymentMethod = "Pending";
                                                    }
                                                    else if (item.Card != 0)
                                                    {
                                                        paymentMethod = "Paid";
                                                    }

                                                    if (paymentMethod == "Pending")
                                                    {
                                                        <div style="color: red; background-color: #ffa07a; border: 1px solid #ffa07a; border-radius: 5px; padding: 3px 8px; display: inline-block; font-size: 12px;">@paymentMethod</div>
                                                    }
                                                    else
                                                    {
                                                        <div style="color: green; background-color: #aef359; border: 1px solid #aef359; border-radius: 5px; padding: 3px 8px; display: inline-block; font-size: 12px;">@paymentMethod</div>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="SuperAdminOrderDetailsEdit" asp-controller="OrderDetailWebsites" asp-route-id="@item.OrderDetailsWebsiteId"> <i class="fa-solid fa-pen-to-square"></i></a> |
                                                <a asp-route-id="@item.OrderDetailsWebsiteId" asp-action="SuperAdminOrderDetails" asp-controller="Restaurants">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>|
                                                <a href="#" class="btn btn-danger btn-sm ms-auto " onclick="confirmSoftDelete('@item.OrderDetailsWebsiteId')">Reject/Cancel</a>
                                            </td>
                                            @{
                                                counter++;
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 10
            });
        });
    </script>
    <script>
        function confirmSoftDelete(orderId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'You won\'t be able to revert this!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, soft delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    softDeleteOrder(orderId);
                }
            });
        }
        function softDeleteOrder(orderId) {
            $.ajax({
                type: 'POST',
                url: '/OrderDetailWebsites/SoftDeleteOrder',
                data: { orderId: orderId },
                success: function (data) {
                    // Handle success
                    console.log('Soft delete successful');
                    window.location.reload();
                },
                error: function (error) {
                    // Handle error
                    console.error('Soft delete failed', error);
                }
            });
        }
    </script>
    }
