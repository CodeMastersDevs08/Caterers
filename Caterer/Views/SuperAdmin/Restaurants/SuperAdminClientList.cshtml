@model IEnumerable<Caterer.Models.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SuperAdminDashboard.cshtml";
}
<link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <p>Clients</p>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-success text-right btn-sm ms-auto mb-3" asp-controller="Users" asp-action="SuperAdminList">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>
                                        Client
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Phone Number
                                    </th>
                                    <th>
                                        Role
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;  
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@counter</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td class="ps-3">
                                            @if (item.Role == "Client")
                                            {
                                                <span class="badge badge-secondary" style="background-color: tomato; color: white;">@item.Role</span>

                                            }
                                            else if (item.Role == "Restaurant")
                                            {
                                                <span class="badge badge-secondary" style="background-color: green; color: white;">@item.Role</span>
                                            }
                                        </td>
                                        @{
                                            counter++;  
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 10
            });
        });
    </script>

}
