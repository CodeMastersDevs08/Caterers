@model IEnumerable<Caterer.Models.PreProduction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<div class="container-fluid py-8">
    <div class="row">
        <div class="col-lg-12">
            <!-- Increase the width to 12 columns -->
            <div class="card">
                <div class="card-header pb-0">

                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Pre Production List</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-success btn-sm ms-auto" asp-controller="PreProductions" asp-action="Create">Add Pre Production</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="preproduction">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PreProductionDate)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.ExpiryDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MenuItemName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TotalPack)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PreProductionStatus)
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int Slno = 1;
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Slno</td>
                                            <td>@(item.PreProductionDate.HasValue ? item.PreProductionDate.Value.ToString("dd-MM-yyyy") : "")</td>
                                            <td>
                                                @(item.ExpiryDate.HasValue ? item.ExpiryDate.Value.ToString("dd-MM-yyyy") : "")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MenuItemName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalPack)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PreProductionStatus)
                                            </td>
                                            <td>
                                                @if (item.PreProductionStatus != "Completed")
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                    </a>

                                                }
                                                else
                                                {
                                                    <span style="color: grey;"><i class="fa-solid fa-pen-to-square"></i></span>

                                                }|
                                               
                                                <a asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a> |
                                                <a class="text-primary"   onclick="DeleteEditRow(@item.Id);">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        Slno++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>
        function DeleteEditRow(Id) {
            var confirmDelete = confirm("Are you sure you want to delete this item?");

            if (confirmDelete) {
                $.ajax({
                    url: '/PreProductions/DeleteEditRow/' + Id,
                    type: 'POST',
                    data: { id: Id },
                    success: function (result) {
                        alert('Record was deleted successfully..!');
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                        alert('Failed to delete the record.'); // Show an error message if deletion fails
                    }
                });
            }
        }

    </script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 25
            });
        });
    </script>

    }