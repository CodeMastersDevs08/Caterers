@model IEnumerable<Caterer.Models.OrderDetailWebsite>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <p>Order List</p>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a  class="badge badge-secondary" style="background-color: red; color: white;" asp-action="RestaurantDeletedOrderList" asp-controller="Restaurants">Reject / Cancel List </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>
                                        Order Code
                                    </th>
                                    <th>
                                        No Of Pax
                                    </th>
                                    <th>
                                        Customer
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Delivery Slot
                                    </th>
                                    <th>
                                        Delivery Status
                                    </th>
                                    <th>
                                        Payment Status
                                    </th>

                                    <th>
                                        Options
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @if(Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.OrderDetailsWebsiteId)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.NoOfPerson)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td class="ps-3">
                                                @Html.DisplayFor(modelItem => item.GrandTotal)
                                            </td>
                                            <td class="ps-3">
                                                @(item.SelectedDate != null ? DateTime.Parse(item.SelectedDate).ToString("dd-MM-yyyy") : "")  (@Html.DisplayFor(modelItem => item.SelectedTime))
                                            </td>
                                            <td class="ps-3">
                                                @if (item.DeliveryStatus == "Pending")
                                                {
                                                    <span class="badge badge-secondary" style="background-color: tomato; color: white;">@item.DeliveryStatus</span>

                                                }
                                                else if (item.DeliveryStatus == "Completed")
                                                {
                                                    <span class="badge badge-secondary" style="background-color: green; color: white;">@item.DeliveryStatus</span>
                                                }
                                            </td>

                                            <td class="ps-3">
                                                @{
                                                    string paymentMethod = "";

                                                    if (item.Cash != 0)
                                                    {
                                                        paymentMethod = "Pending";
                                                    }
                                                    else if (item.Card != 0)
                                                    {
                                                        paymentMethod = "Paid";
                                                    }

                                                    if (paymentMethod == "Pending")
                                                    {
                                                        <div class="badge badge-secondary" style="background-color: Tomato; color: white;">@paymentMethod</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="badge badge-secondary" style="background-color: green; color: white;">@paymentMethod</div>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @if (item.DeliveryStatus == "Pending")
                                                {
                                                    <a asp-action="OrderDetailsEdit" asp-controller="OrderDetailWebsites" asp-route-id="@item.OrderDetailsWebsiteId">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span style="color: grey;"><i class="fa-solid fa-pen-to-square"></i></span>

                                                }|
                                                <a asp-route-id="@item.OrderDetailsWebsiteId" asp-action="RestaurantOrderDetails" asp-controller="OrderDetailWebsites">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>|

                                                <a href="#" class="badge badge-secondary" style="background-color: red; color: white;" onclick="confirmSoftDelete('@item.OrderDetailsWebsiteId')">Reject / Cancel</a>
                                            </td>
                                            @{
                                                counter++;
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 10
            });
        });
    </script>
    <script>
        function confirmSoftDelete(orderId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'You won\'t be able to revert this!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, soft delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    softDeleteOrder(orderId);
                }
            });
        }
        function softDeleteOrder(orderId) {
            $.ajax({
                type: 'POST',
                url: '/OrderDetailWebsites/SoftDeleteOrder',
                data: { orderId: orderId },
                success: function (data) {
                    console.log('Soft delete successful');
                    window.location.reload();
                },
                error: function (error) {
                    console.error('Soft delete failed', error);
                }
            });
        }
    </script>
    }
