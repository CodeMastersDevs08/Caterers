    <!-- jQuery -->
    <!--      Fetch warehouse names and populate the dropdown -->
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Users/GetWarehouseNames",
                success: function (data) {
                    var dropdown = $("#warehouseDropdown");
                    $.each(data, function (index, value) {
                        dropdown.append($("<option />").val(value).text(value));
                    });
                    // Automatically select the first warehouse
                    dropdown.val(data[0]).change(); // Trigger change event
                }
            });

            $('#warehouseDropdown').change(function () {
                var selectedValue = $(this).val();
                localStorage.setItem('selectedWarehouse', selectedValue);
                fetchWarehouseDetails(selectedValue);
            });

            function fetchWarehouseDetails(warehouseName) {
                $.ajax({
                    type: "GET",
                    url: "/Users/GetWarehouseDetails",
                    data: { warehouseName: warehouseName },
                    success: function (data) {
                        $('#warehouseId').val(data.warehouseId);
                        $('#warehouseName').val(data.warehouseName);
                    }
                });
            }
        });

    </script>
