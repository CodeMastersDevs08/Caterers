                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="enableVariantsToggle" asp-for="EnableVariants" />
                                        <label class="form-check-label" for="enableVariantsToggle">@Html.DisplayNameFor(model => model.EnableVariants)</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="enableAlwaysAvailableToggle" asp-for="EnableAlwaysAvailable" />
