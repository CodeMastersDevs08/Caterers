@model Caterer.Models.CateringItem
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
    ViewData["Heading"] = "ItemMenus";
}
<!-- End Navbar -->
<div class="container-fluid py-8">
    <div class="row">
        <!-- First Card -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header pb-0">
