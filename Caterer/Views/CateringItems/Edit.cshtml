                            <div class="form-group form-check day-details" id="FridayGroup" style="flex: 1; margin-right: 10px;">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Friday" /> @Html.DisplayNameFor(model => model.Friday)
                                </label>
                            </div>
                            <div class="form-group day-details" id="FridayStartGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="FridayStart" type="time" class="form-control" />
                                <span asp-validation-for="FridayStart" class="text-danger"></span>
                            </div>
                            <div class="form-group day-details" id="FridayEndGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="FridayEnd" type="time" class="form-control" />
                                <span asp-validation-for="FridayEnd" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Saturday -->
                        <div style="display: flex; flex-wrap: wrap;">
                            <div class="form-group form-check day-details" id="SaturdayGroup" style="flex: 1; margin-right: 10px;">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Saturday" /> @Html.DisplayNameFor(model => model.Saturday)
                                </label>
                            </div>
                            <div class="form-group day-details" id="SaturdayStartGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="SaturdayStart" type="time" class="form-control" />
                                <span asp-validation-for="SaturdayStart" class="text-danger"></span>
                            </div>
                            <div class="form-group day-details" id="SaturdayEndGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="SaturdayEnd" type="time" class="form-control" />
                                <span asp-validation-for="SaturdayEnd" class="text-danger"></span>
                            </div>
