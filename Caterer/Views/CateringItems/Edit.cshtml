                                    {
                                        <img src="/Images/Menuitems/@Model.ItemImage" style="width:100px; border-radius:10px; height:80px" />
                                    }
                                    <span asp-validation-for="ItemImage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div id="imagePreview" class="mt-2"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="itemAvailableToggle" asp-for="ItemAvailable" />
                                        <label class ="custom-control-label" for="itemAvailableToggle">@Html.DisplayNameFor(model => model.ItemAvailable)</label>
                                    </div>
                                </div>
                            </div>
                        </div>
