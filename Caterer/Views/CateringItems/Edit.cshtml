                                        <a href="#" class=" btn btn-danger" onclick="DeleteEditRow(@Model.CateringItemId);">Delete</a>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <script>
                            function DeleteEditRow(cateringItemId) {
                                var confirmDelete = confirm("Are you sure you want to delete this item?");

                                if (confirmDelete) {
                                    $.ajax({
                                        url: '/CateringItems/DeleteEditRow/' + cateringItemId,
                                        type: 'POST',
                                        data: { id: cateringItemId },
                                        success: function (result) {
                                            alert('Record was deleted successfully..!');
                                            window.location.href = '/CateringItems/Index';
                                        },
                                        error: function (xhr, status, error) {
                                            console.log(xhr.responseText);
                                            alert('Failed to delete the record.');  
                                        }
                                    });
                                }
                            }

                        </script>
                        <br />
