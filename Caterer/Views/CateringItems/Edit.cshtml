                                <input asp-for="MondayEnd" type="time" class="form-control" />
                                <span asp-validation-for="MondayEnd" class="text-danger"></span>
                            </div>
                        </div>
                        <div style="display: flex; flex-wrap: wrap;">
                            <!-- Tuesday -->
                            <div class="form-group form-check day-details" id="TuesdayGroup" style="flex: 1; margin-right: 10px;">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Tuesday" /> @Html.DisplayNameFor(model => model.Tuesday)
                                </label>
                            </div>
                            <div class="form-group day-details" id="TuesdayStartGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="TuesdayStart" type="time" class="form-control" />
                                <span asp-validation-for="TuesdayStart" class="text-danger"></span>
                            </div>

                            <div class="form-group day-details" id="TuesdayEndGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="TuesdayEnd" type="time" class="form-control" />
                                <span asp-validation-for="TuesdayEnd" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Wednesday -->
                        <div style="display: flex; flex-wrap: wrap;">
                            <div class="form-group form-check day-details" id="WednesdayGroup" style="flex: 1; margin-right: 10px;">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Wednesday" /> @Html.DisplayNameFor(model => model.Wednesday)
                                </label>
                            </div>
                            <div class="form-group day-details" id="WednesdayStartGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="WednesdayStart" type="time" class="form-control" />
                                <span asp-validation-for="WednesdayStart" class="text-danger"></span>
                            </div>
                            <div class="form-group day-details" id="WednesdayEndGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="WednesdayEnd" type="time" class="form-control" />
                                <span asp-validation-for="WednesdayEnd" class="text-danger"></span>
