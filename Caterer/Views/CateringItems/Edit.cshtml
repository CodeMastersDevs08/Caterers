                                </label>
                            </div>
                            <div class="form-group day-details" id="ThursdayStartGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="ThursdayStart" type="time" class="form-control" />
                                <span asp-validation-for="ThursdayStart" class="text-danger"></span>
                            </div>
                            <div class="form-group day-details" id="ThursdayEndGroup" style="flex: 1; margin-right: 10px;">
                                <input asp-for="ThursdayEnd" type="time" class="form-control" />
                                <span asp-validation-for="ThursdayEnd" class="text-danger"></span>
                            </div>
