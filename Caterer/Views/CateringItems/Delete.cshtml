@model Caterer.Models.CateringItem
@{
    ViewData["Title"] = "Delete";
    Layout = null;
    ViewData["Heading"] = "Products";
}
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <p class="mb-0">Delete </p>
                        <a class="btn btn-danger btn-sm ms-auto" asp-action="Index" asp-controller="CateringItems">X</a>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <hr class="my-3">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ItemName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ItemName)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ItemPrice)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ItemPrice)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ItemImage)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ItemImage)
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CateringItemId" />
                            <div class="text-center custom-pro-edt-ds">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
