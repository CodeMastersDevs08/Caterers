@model Caterer.Models.MenuRecipe
@{
    ViewData["Title"] = "Menu Recipe Details";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-10">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Menu Recipe Details</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-success btn-sm ms-auto" asp-controller="MenuRecipes" asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <dl>
                                        <dt>Menu Recipe No: @Model.MenuRecipeNo</dt>
                                        <dt>Menu Item Name: @Model.MenuItemName</dt>
                                        <dt>Menu Category: @Model.MenuCategory</dt>

                                    </dl>
                                </div>
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Product Name</th>
                                        <th>Product Type</th>
                                        <th>Unit</th>
                                        <th>Category</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int counter = 1;
                                    }
                                    @foreach (var relatedMenuRecipe in (List<Caterer.Models.MenuRecipe>)ViewData["RelatedPurchaseOrders"])
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>@relatedMenuRecipe.ProductName</td>
                                            <td>@relatedMenuRecipe.ProductType</td>
                                            <td>@relatedMenuRecipe.ProductUnit</td>
                                            <td>@relatedMenuRecipe.ProductCategory</td>
                                            <td>@relatedMenuRecipe.MenuRecipeQty</td>
                                            @{
                                                counter++;
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}