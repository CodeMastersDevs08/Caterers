@model Caterer.Models.MenuRecipe
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Delete Products</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-primary text-right btn-sm ms-auto mb-3" asp-controller="MenuRecipes" asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <h4>Product</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.RestaurantId)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.RestaurantId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MenuItemId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MenuItemId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MenuItemName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MenuItemName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MenuCategory)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MenuCategory)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MenuRecipeImage)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MenuRecipeImage)
                            </dd>

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.MenuRecipeNo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.MenuRecipeNo)
                            </dd>
                        </dl>
                        <form asp-action="Delete" asp-route-id="@Model.MenuRecipeId" method="post">
                            <input type="hidden" asp-for="MenuRecipeId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
