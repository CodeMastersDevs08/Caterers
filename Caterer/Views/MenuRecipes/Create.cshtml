@model Caterer.Models.MenuRecipeViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
}
<div class="container-fluid py-8">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header pb-0">

                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Menu Recipe</h4>
                        <div class="d-flex">
                            <div class="ms-auto">
                                <a class="btn btn-primary btn-sm ms-auto" asp-action="Index" asp-controller="Menurecipes">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="Create" id="myForm" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="MenuRecipeNo" class="form-control" id="MenuRecipeNo" />
                                    <span asp-validation-for="MenuRecipeNo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="RestaurantId" class="form-control" />
                                </div>
                                <div class="row input-group2">
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label asp-for="MenuItemId" class="control-label">Menu Recipe Name</label>
                                            <select id="MenuItemId" data-live-search="true" asp-for="MenuItemId" asp-items="@ViewBag.MenuItems" class="form-control selectpicker">
                                                <option value="">--Select Menu Name--</option>
                                            </select>
                                            <input type="hidden" id="MenuItemName" asp-for="MenuItemName" class="form-control" readonly />
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-group">
                                            <label asp-for="MenuCategory" class="control-label"></label>
                                            <input id="MenuCategory" asp-for="MenuCategory" class="form-control" readonly required />
                                            <span asp-validation-for="MenuCategory" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="form-group">
                                            <label asp-for="Packs" class="control-label"></label>
                                            <input id="Packs" asp-for="Packs" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                                <div id="container">
                                    <div class="table-responsive">
                                        <table class="table" id="recipeTable">
                                            <thead>
                                                <tr>
                                                    <th>Product Name</th>
                                                    <th>Product Type</th>
                                                    <th>Product Unit</th>
                                                    <th>Product Category</th>
                                                    <th>Menu Recipe Qty</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="input-group1">
                                                    <td>
                                                        <div class="form-group">
                                                            <select data-live-search="true" asp-for="ProductId" asp-items="@ViewBag.Product" class="form-control" required>
                                                                <option value="">--Select Product Name--</option>
                                                            </select>
                                                            <span asp-validation-for="ProductId" class="text-danger"></span>
                                                            <input type="hidden" asp-for="ProductName" class="form-control" readonly />
                                                            <input type="hidden" asp-for="Productcode" id="Productcode" class="form-control" readonly />
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-group">
                                                            <input asp-for="ProductType" class="form-control" readonly />
                                                            <span asp-validation-for="ProductType" class="text-danger"></span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-group">
                                                            <input asp-for="ProductUnit" class="form-control" readonly />
                                                            <span asp-validation-for="ProductUnit" class="text-danger"></span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-group">
                                                            <input asp-for="ProductCategory" class="form-control" readonly />
                                                            <span asp-validation-for="ProductCategory" class="text-danger"></span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-group">
                                                            <input asp-for="MenuRecipeQty" type="text" class="form-control" required />
                                                            <span asp-validation-for="MenuRecipeQty" class="text-danger"></span>
                                                        </div>
                                                    </td>
                                                    <td class="btn-group">
                                                        <button type="button" class="btn btn-success add-row add-row-icon">+</button>
                                                        <button type="button" class="btn btn-danger delete-row delete-row-icon">-</button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row  ">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="text-center custom-pro-edt-ds">
                                            <div class="text-center">
                                                <button type="submit" class=" btn btn-success btn-lg mt-4">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/js/bootstrap-select.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.selectpicker').selectpicker();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#ProductId').selectpicker();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#MenuItemId').change(function () {
                var selectedValue = $(this).val();
                var container = $(this).closest('.input-group2');
                if (selectedValue !== "") {
                    $.ajax({
                        url: '@Url.Action("GetMenuItemDetails", "MenuRecipes")',
                        type: 'GET',
                        data: { id: selectedValue },
                        success: function (data) {
                            $('#MenuItemName').val(data.itemName);
                            $('#MenuCategory').val(data.menuCategoryId);
                            $('#MenuRecipeImage').val(data.itemImage);
                            displayImage(data.itemImage);
                            // Check for duplicate menu items
                            $.ajax({
                                url: '@Url.Action("CheckDuplicateMenuItem", "MenuRecipes")',
                                type: 'POST',
                                data: { menuItemId: selectedValue },
                                success: function (duplicateData) {
                                    if (duplicateData.isDuplicate) {
                                        alert("MenuItem-Name with this name already exists in the list");
                                        $('#MenuItemId').val('');
                                        $('#MenuItemName').val('');
                                        container.find('#MenuCategory').val('');
                                    }
                                }
                            });
                        }
                    });
                    function displayImage(imageFileName) {
                        console.log('Image File Name:', imageFileName);
                        var imageUrl = '/Images/Menuitems/' + imageFileName;
                        $('#imageContainer').attr('src', imageUrl);
                    }
                } else {
                    $('#MenuItemName').val('');
                    $('#MenuCategory').val('');
                    $('#MenuRecipeImage').val('');
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var selectedProductNames = [];
            $('#container').on('change', '#ProductId', function () {
                var selectedValue = $(this).val();
                var container = $(this).closest('.input-group1');
                if (selectedValue !== "") {
                    $.ajax({
                        url: '@Url.Action("GetProductDetails1", "MenuRecipes")',
                        type: 'GET',
                        data: { id: selectedValue },
                        success: function (data) {
                            container.find('#ProductType').val(data.productType);
                            container.find('#Productcode').val(data.productcode);
                            container.find('#ProductName').val(data.productName);
                            container.find('#ProductUnit').val(data.productUnit);
                            container.find('#ProductCategory').val(data.productCategory);
                            if (selectedProductNames.includes(data.productName)) {
                                alert("Product with this name already exists in the list.");
                                container.find('#ProductType').val('');
                                container.find('#Productcode').val('');
                                container.find('#ProductId').val('');
                                container.find('#ProductUnit').val('');
                                container.find('#ProductCategory').val('');
                            }
                            selectedProductNames.push(data.productName);
                        }
                    });
                } else {
                    container.find('#ProductType').val('');
                    container.find('#Productcode').val('');
                    container.find('#ProductId').val('');
                    container.find('#ProductUnit').val('');
                    container.find('#ProductCategory').val('');
                }
            });

            function removeProductName(productName) {
                var index = selectedProductNames.indexOf(productName);
                if (index !== -1) {
                    selectedProductNames.splice(index, 1);
                }
            }

            $(document).ready(function () {

                function updateButtonVisibility() {
                    var rows = $(".input-group1");
                    rows.find(".add-row").hide();
                    rows.find(".remove-row").show();
                    rows.first().find(".add-row").show();
                    rows.first().find(".remove-row").hide();
                }
                $(document).on("click", ".add-row", function () {
                    if (!isFirstRowEmpty()) {
                        var newRow = $(this).closest(".input-group1").clone();
                        newRow.find("input").val("");
                        $(this).closest(".input-group1").before(newRow);
                        newRow.find(".remove-row").show();
                        newRow.find(".add-row").hide();
                        updateButtonVisibility();
                    }
                });
                function isFirstRowEmpty() {
                    var firstRow = $(".input-group1:first");
                    var inputs = firstRow.find("select, input[type='text']");
                    var isEmpty = false;

                    inputs.each(function () {
                        if (!$(this).val()) {
                            isEmpty = true;
                            return false;
                        }
                    });

                    if (isEmpty) {
                        alert("Please fill in all the fields in the first row.");
                    }
                    return isEmpty;
                }
                updateButtonVisibility();
                $(document).on("click", ".delete-row", function () {
                    var $row = $(this).closest(".input-group1");
                    var productName = $row.find(".product-autocomplete").val();
                    removeProductName(productName);
                    var rowindex = $row.index();
                    var rowCount = $(".input-group1").length;
                    if (rowCount === 1) {
                    } else if (rowindex === 0) {
                        $row.remove();
                        var newFirstRow = $(".input-group1:first");
                        newFirstRow.find(".add-row").show();
                    } else {
                        $row.remove();
                        updateTotal();
                        updateButtonVisibility();
                    }
                });
                $("#purchaseOrderForm").submit(function () {
                    return validateForm();
                });
            });

        });
    </script>
    <script>
        $(document).ready(function () {
            var randomFourDigitNumber = Math.floor(1000 + Math.random() * 9000);
            $("#MenuRecipeNo").val(randomFourDigitNumber);
        });
    </script>
            }