@model Caterer.Models.Tog
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
    ViewData["Heading"] = "Purchase Order";
}

<div class="container-fluid py-8">
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-light text-black">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>Transfer Of Goods</h4>
                        <div class="ms-auto">
                            <a class="btn btn-success btn-sm" asp-controller="Togs" asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary">TogNo: @Model.TogNO</h5>
                            <dl class="row">
                                <dt class="col-sm-4">TogDate:</dt>
                                <dd class="col-sm-8">@Model.TogDate.ToString("dd-MM-yyyy")</dd>

                                <dt class="col-sm-4">From:</dt>
                                <dd class="col-sm-8">@Model.WarehouseName</dd>

                                <dt class="col-sm-4">To:</dt>
                                <dd class="col-sm-8">@Model.ToWarehouse</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">@Model.Status</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr class="bg-info text-white">
                                    <th>S.No</th>
                                    <th>Product Name</th>
                                    <th>Measurement</th>
                                    <th>Quantity</th>
                                    <th>Unit Cost</th>
                                    <th>Total Cost</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @foreach (var relatedPurchaseOrder in (List<Caterer.Models.Tog>)ViewData["RelatedPurchaseOrders"])
                                {
                                    <tr>
                                        <td>@counter</td>
                                        <td>@relatedPurchaseOrder.ProductName</td>
                                        <td>@relatedPurchaseOrder.Measurement</td>
                                        <td>@relatedPurchaseOrder.Quantity</td>
                                        <td>@relatedPurchaseOrder.UnitCost</td>
                                        <td>@relatedPurchaseOrder.TotalCost</td>
                                        @{
                                            counter++;
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-end">
                                <div class="total">
                                    <h6 class="text-primary">Total Amount: <strong>@Model.Total</strong></h6>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="signature">
                                <div class="signature-line">
                                    <span class="signature-label"><b>Store Keeper Signature:</b></span>
                                    <div class="signature-box"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="signature">
                                <div class="signature-line">
                                    <span class="signature-label"><b>Approved by</b></span>
                                    <div class="signature-box"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="signature">
                                <div class="signature-line">
                                    <span class="signature-label"><b>Received by:</b></span>
                                    <div class="signature-box"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-4">
                            @if (Model.Status == "Pending")
                            {
                                <!-- Your content for the first column -->
                            }
                        </div>
                    </div>
                </div>
            </div>
            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }
        </div>
    </div>
</div>
