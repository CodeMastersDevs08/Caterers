@model IEnumerable<Caterer.Models.MenuCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CaterersDashboard.cshtml";
    ViewData["Heading"] = "Products";
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-20">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-md-12 col-lg-8">
                            <h5>Restaurant</h5>
                        </div>
                        <div class="col-md-12 col-lg-4">
                            <a class="btn btn-primary text-right btn-sm ml-auto mb-2" asp-controller="Products" asp-action="Create">Add Products</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MenuCategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemAvailable)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MenuCategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemAvailable)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.MenuCategoryId">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.MenuCategoryId">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.MenuCategoryId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
