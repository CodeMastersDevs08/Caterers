@model Caterer.Models.MenuCategory
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Heading"] = "Products";
}
<div class="container-fluid py-8">
    <div class="row justify-content-center">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <p class="mb-0 mr-auto">Add Menu Category</p>
                        <a class="btn btn-danger btn-sm " asp-action="Index" asp-controller="MenuItems">X</a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <input asp-for="RestaurantId" type="hidden" placeholder="RestaurantId" class="form-control" value="@ViewBag.RestaurantId" />
                            <label asp-for="MenuCategoryName" class="control-label">Menu Category Name</label>
                            <input asp-for="MenuCategoryName" placeholder="Menu Category Name" class="form-control" required />
                            <span asp-validation-for="MenuCategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="SelectedItem"  type="hidden" value="0" placeholder="Selected List Item" class="form-control" required />
                            <span asp-validation-for="SelectedItem" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check" style="display:none;">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="ItemAvailable" hidden /> @Html.DisplayNameFor(model => model.ItemAvailable)
                            </label>
                        </div>
                        <div class="text-center custom-pro-edt-ds">
                            <button type="submit" class="btn btn-success m-r-10" onclick="validateName()">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}